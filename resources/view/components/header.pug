nav.navbar.is-dark(role='navigation' aria-label='main navigation')
  div.container
    div.navbar-brand
      a.navbar-item(href='/') Rust | Game Limits

      div.navbar-burger.js-navbar-toggle(data-target='.js-navbar')
        span
        span
        span

    div.navbar-menu.js-navbar
      div.navbar-start
        a.navbar-item(href='/') Home
        //- a.navbar-item(href='/blog') Blog
        a.navbar-item(href='/rules') Rules
        a.navbar-item(href='/chatlog') Chatlog
        a.navbar-item(href='/donate') Donate

      div.navbar-end
        if _user && _user.is_admin
          div.navbar-item.has-dropdown.is-hoverable
            div.navbar-link
              | Admin
            div.navbar-dropdown
              a.navbar-item(href='/admin') Dashboard
              a.navbar-item(href='/admin/players') Players
              a.navbar-item(href='/admin/shop') Shop

        if _user
          span.navbar-item
            small #{_user.rp} RP
          div.navbar-item.has-dropdown.is-hoverable
            div.navbar-link
              if _user.avatar
                img(src=_user.avatar)
              |&nbsp; #{_user.display_name}
            div.navbar-dropdown
              a.navbar-item(href='/donate') Donate for Reward Points
              a.navbar-item(href='/logout') Logout

        else
          a.navbar-item(href='/login')
            center
              img(src='https://steamcommunity-a.akamaihd.net/public/images/signinthroughsteam/sits_01.png')
